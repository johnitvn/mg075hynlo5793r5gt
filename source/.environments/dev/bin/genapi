#!/bin/sh

BASEDIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
ROOTDIR=$(dirname $BASEDIR)


# set these paths to match your environment
OUTPUT=$ROOTDIR/docs
GUIDE_PATH=$ROOTDIR/guide
SOURCE_PATH=$ROOTDIR/backend,$ROOTDIR/frontend,$ROOTDIR/console,$ROOTDIR/common


cd  $ROOTDIR/vendor/bin
./apidoc api $SOURCE_PATH $OUTPUT/api --guide=../guide --interactive=0
#./apidoc guide $YII_PATH/docs/guide    $OUTPUT/guide --apiDocs=../api --guidePrefix= --interactive=0